<%- contentFor('title') %>
<title>Cadastro</title>

<%- contentFor('body') %>

<div class="container">
    <div class="coluna-esquerda">
        <h1>Grape Cards</h1>
        <p class="slogan">O melhor lugar para encontrar cartas de jogos de cartas no Brasil!</p>
    </div>
    <div class="coluna-direita">
        <div class="buttons">
            <div class="botão-dark">
                <a href="#" class="theme-switch">Switch mode</a>
            </div>
            <div class="botões-fontes">
                <button id="increaseFont">A+</button>
                <button id="decreaseFont">A-</button>
            </div>
        </div>
        <div class="forms">
            <form id="f2">
                <h1>Cadastro</h1>
                <p>Nome de Usuário <input type="text" name="username"></p>
                <p>Senha <input id="senha" type="password" name="senha"></p>
                <p>Confirmar Senha <input type="password" id="confirmar-senha"></p>
                <p id="mensagemErro" style="color: red;"></p>
            <p><input id="btok_cadastro" type="submit" value="Cadastrar"></p>
            </form>
        </div>
    </div>
</div>