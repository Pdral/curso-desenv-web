<header class="header">
	<div class="logo">
		<img src="/img/logo.png" alt="Logo"> 
		GrapeCards
	</div>
	<div class="perfil">
		<div class="moedas">
			<div class="simbolo-moeda">
				GC$
			</div>
			<div id="quantidade-moedas" class="valor-moeda">
				<%= user["moedas"] %>
			</div>
		</div>
		<div class="usuario">
			<div class="user-icon">
				<a class="user-icon-link" href="/perfil">
					<img src=<%= user["icon"] %> alt="User Icon">
				</a>
			</div>
			<div class="username">
				<%= user["username"] %>
			</div>
		</div>
		<div>
			<button id="increaseFont">A+</button>
			<button id="decreaseFont">A-</button>
		</div>
		<div>
			<form id="logout-form" action="http://localhost:8084/logout" method="POST">
				<p><input type="submit" value="Logout"></p>
			</form>
		</div>  
	</div>    
</div>
</header>

<nav class="nav">
	<a href="/" class=<%= navclass["produtos"] %>>Produtos</a>
	<a href="/meus-produtos" class=<%= navclass["meus-produtos"] %>>Meus Produtos</a>
	<a href="#" class="theme-switch">Switch mode</a>
</nav>
<input type="hidden" id="userId" value="<%= user["id"] %>">