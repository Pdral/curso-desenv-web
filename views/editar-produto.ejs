<%- contentFor('title') %>
<title>Editar</title>

<%- contentFor('body') %>

<div class="container">
      
    <form id="edit-produto-form" action='http://localhost:8084/cartas' method='post' encType="multipart/form-data">
        <div class="carta-a-venda">
            <div class="input-editar">
                <input name="nome" class="nome" value="<%= carta["nome"] %>">
            </div>
            <div class="frente-verso-add">
                <img id="frente" class="carta-grande" src=<%= carta["frente"] %> alt="Frente da carta">
                <img id="verso" class="carta-grande" src=<%= carta["verso"] %> alt="Verso da carta">
            </div>
        </div>

        <input type="hidden" name="vendedor" value="<%= user["id"] %>">

        <div class="descricao-produto">
            <h3 class="cabecalho-descricao">Frente da carta: </h3>
            <input id="frente-input" class="input-img" type="file" name="filename">
        </div>

        <div class="descricao-produto">
            <h3 class="cabecalho-descricao">Verso da carta: </h3>
            <input id="verso-input" class="input-img" type="file" name="filename">
        </div>

        <div class="descricao-produto">
            <h3 class="cabecalho-descricao">Vendedor: </h3>
            <a href="/meus-produtos?user=<%= user["id"] %>">
                <h3 class="descricao"><%= user["username"] %></h3>
            </a>
        </div>

        <div class="descricao-produto">
            <h3 class="cabecalho-descricao">Pre√ßo: </h3>
            <div class="div-moedas">
                GC$<input class="input-moedas" type="text" name="preco" value="<%= carta["preco"] %>">
            </div>
        </div>

        <div class="descricao-produto">
            <h3 class="cabecalho-descricao">Jogo: </h3>
            <select id="select-jogo-descricao-produto" name="jogo" required>
                <% for (var i=0; i<jogos.length; i++) {%>
                    <% if (jogos[i].nome == carta.jogo) { %>
                        <option selected value="<%= jogos[i]["id"] %>"><%= jogos[i]["nome"] %></option>
                    <% } else{  %>
                        <option value="<%= jogos[i]["id"] %>"><%= jogos[i]["nome"] %></option>
                    <% } %>
                <% } %>
            </select>
        </div>

        <div class="botoes-editar">
            <button type="submit" class="botao-salvar">Salvar</button>
            <button type="button" onclick="excluirCarta()" class="botao-excluir">Excluir</button>
        </div>
    </form>
</div>